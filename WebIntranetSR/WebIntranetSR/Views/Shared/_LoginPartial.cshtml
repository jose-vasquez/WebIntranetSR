@using Microsoft.AspNetCore.Identity
@using WebIntranetSR.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="nav-link">Dashboard</a>
            </li>
        </ul>
    </div>   
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item active">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">Hola @UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item active">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Cerrar Sesión</button>
            </li>
        </ul>
    </form>
}
else
{
    <div class="collapse navbar-collapse" id="navbarText">
        
    </div> 
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">Registrarme</a>
        </li>
        <li class="nav-item active">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Iniciar Sesión</a>
        </li>
    </ul>
}
